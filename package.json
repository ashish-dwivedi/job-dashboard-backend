  "description": "Backend APIs for job-dashboard project",
  "main": "app/app.js",
  "scripts": {
    "start": "nodemon app/app.js",
    "test": "jest",
    "format:fix": "pretty-quick --staged"
  },
  "author": "Ashish Dwivedi",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "jest": "^25.1.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
